@model Kursova.ViewModels.RegisterModel

<h2>Реєстрація</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <input type="text" placeholder="Прізвище" asp-for="Surname" />
        </div>
        <div>
            <input type="text" placeholder="Ім'я" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <input type="text" placeholder="Група(ПМ*-**)" asp-for="Group" />
        </div>
        <div>
            <input type="text" placeholder="Кафедра" asp-for="Kafedra" />
        </div>
        <div>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input asp-for="ConfirmPassword" placeholder="Повторіть пароль"  />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Зареєструватися" />
        </div>
    </div>
</form>