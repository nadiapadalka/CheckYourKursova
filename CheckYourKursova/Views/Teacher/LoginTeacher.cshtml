@model Kursova.ViewModels.LoginModel

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="nav-link text-dark" asp-area="" asp-action="MainPage" asp-controller="Home">
                <img class="logo-main scale-with-grid" src="~/img/logos/logo_1.png" data-retina="~/img/logos/logo_1.png" data-height="" width="160" height="160">
            </a>
        </div>
    </nav>

<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="card card-2">
                <div class="card-body">

                    <h2 class="text-dark">Увійдіть, будь ласка</h2>
                    <form asp-action="LoginTeacher" asp-controller="Teacher" asp-anti-forgery="true">
                        <div class="input-group">
                            <input type="text" id="inputEmail" class="form-control" placeholder="Логін" asp-for="Email" required autofocus>
                            <span asp-validation-for="Email" />
                        </div>
                        <div class="input-group">
                            <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Пароль" required autofocus>
                            <span asp-validation-for="Password" />
                        </div>

                        <div class="checkbox mb-3">
                            <label class="text-dark">
                                <input type="checkbox" value="remember-me"> Запам'ятати мене
                            </label>
                        </div>
                        <div class="checkbox mb-3">
                            <button class="btn btn-outline-success btn-m text-uppercase js-scroll-trigger" type="submit">Увійти</button>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <a class="dropdown-item" asp-action="RegisterTeacher" asp-controller="Teacher" style="margin-left: 200px;margin-right: 100px;">Зареєструватися</a>
                            </div>
                            <div class="col-md-4">
                                <a class="dropdown-item" asp-action="ChangeTeacherPassword" asp-controller="Teacher" style="margin-left: 200px;margin-right: 100px;">Забули пароль?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>