<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="card card-2">
                <div class="card-body">
                    <h2 class="text-dark">Зареєстуйтеся, будь ласка</h2><br>
                    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly" />
                        <div>
                            <div class="input-group">
                                <input type="text" id="inputName" class="form-control" placeholder="Прізвище" asp-for="Surname" required autofocus>
                            </div>
                            <div class="input-group">
                                <input type="text" id="inputName" class="form-control" placeholder="Ім'я" asp-for="Name" required autofocus>
                                <span asp-validation-for="Name" />
                            </div>
                            <div class="input-group">
                                <input type="text" id="inputGroup" class="form-control" placeholder="Група(ПМ*-**)" asp-for="Group" required autofocus>
                            </div>
                            <div class="input-group">
                                <input type="text" id="inputKafedra" class="form-control" placeholder="Кафедра" asp-for="Kafedra" required autofocus>
                            </div><br><br>
                            <div class="input-group">
                                <input type="text" id="inputEmail" class="form-control" placeholder="Електронна пошта" asp-for="Email" required autofocus>
                                <span asp-validation-for="Email" />
                            </div>
                            <div class="input-group">
                                <input id="inputPassword" class="form-control" placeholder="Пароль" asp-for="Password" required autofocus>
                                <span asp-validation-for="Password" />
                            </div>
                            <div class="input-group">
                                <input id="inputPassword" class="form-control" placeholder="Підтвердити пароль" asp-for="ConfirmPassword" required autofocus>
                                <span asp-validation-for="ConfirmPassword" />
                            </div>

                            <div class="checkbox mb-3">
                                <button class="btn btn-outline-success btn-m text-uppercase js-scroll-trigger" asp-action="MainPage" asp-controller="Home" type="submit">Зареєструватися</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
