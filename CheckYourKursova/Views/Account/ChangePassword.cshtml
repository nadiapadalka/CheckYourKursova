@model Kursova.ViewModels.ChangePasswordModel
<h2>Відновлення паролю</h2>

<form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <input type="text" placeholder="Прізвище" asp-for="Surname" />
        </div>
        <div>
            <input type="text" placeholder="Ім'я" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input asp-for="ConfirmPassword" placeholder="Повторіть пароль"  />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Зберегти" />
        </div>
    </div>
</form>