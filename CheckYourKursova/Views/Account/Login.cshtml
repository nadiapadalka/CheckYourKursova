<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <div class="card card-2">
                <div class="card-body">
                    <h2 class="text-dark">Увійдіть, будь ласка</h2>
                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                        <div class="input-group">
                            <input type="text" id="inputEmail" class="form-control" placeholder="Логін" asp-for="Email" required autofocus>
                            <span asp-validation-for="Email" />
                        </div>
                        <div class="input-group">
                            <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Пароль" required autofocus>
                            <span asp-validation-for="Password" />
                        </div>

                        <div class="checkbox mb-3">
                            <label class="text-dark">
                                <input type="checkbox" value="remember-me"> Запам'ятати мене
                            </label>
                        </div>
                        <div class="checkbox mb-3">
                            <button class="btn btn-outline-success btn-m text-uppercase js-scroll-trigger"type="submit">Увійти</button>
                        </div>
                        <a class="dropdown-item" asp-action="Register" asp-controller="Account">Зареєструватися</a>
                        <a class="dropdown-item" asp-action="ForgotPassword" asp-controller="Account">Забули пароль?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>