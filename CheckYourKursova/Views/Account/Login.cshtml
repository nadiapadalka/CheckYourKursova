@model Kursova.ViewModels.LoginModel

<h2>Вхід</h2>


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div>
        <div class="form-group">
            <input type="text" asp-for="Email" placeholder="Логін" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Пароль" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Увійти" class="btn btn-outline-dark" />
        </div>
    </div>
    
</form>
<div class="form-group">

    <a asp-action="Register" asp-controller="Account" class="btn btn-outline-dark">Зареєструватися</a>
    <a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-outline-dark">Забули пароль?</a>

    </div>
