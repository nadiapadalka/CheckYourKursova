@model Kursova.ViewModels.ChangeTeacherPasswordModel
<h2>Відновлення паролю</h2>

<form asp-action="ChangeTeacherPassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <input type="text" placeholder="Прізвище та ініціали" asp-for="Initials" />
        </div>
        <div>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input asp-for="ConfirmPassword" placeholder="Повторіть пароль" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Зберегти" />
        </div>
    </div>
</form>